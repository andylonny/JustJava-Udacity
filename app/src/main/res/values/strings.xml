<resources xmlns:xliff="urn:oasis:names:tc:xliff:document:1.2">
    <!-- Title for the application. [CHAR LIMIT=20] -->
    <string name="app_name">Just Java</string>

    <!-- Hint text display in the empty field for the user's name. [CHAR LIMIT=20] -->
    <string name="name">Name</string>

    <!-- Header text for the list of toppings [CHAR LIMIT = 20] -->
    <string name="toppings">Toppings</string>

    <!-- Hint the text display for whipped cream. [CHAR LIMIT = 20] -->
    <string name="whipped_cream">Whipped Cream</string>

    <!-- Hint the text display for chocolate. [CHAR LIMIT = 20] -->
    <string name="chocolate">Chocolate</string>

    <!-- Hint the text display for quantity. [CHAR LIMIT = 20] -->
    <string name="quantity">Quantity:</string>

    <!-- Hint the text display for order. [CHAR LIMIT = 20] -->
    <string name="order">Order</string>

    <!--
        Name for the order summary. It will be shown in the format of "Name: Amy" where Amy is the
        user's name. [CHAR LIMIT = NONE]
     -->
    <string name="order_summary_name">Name: <xliff:g id="name" example = "Amy">%s</xliff:g></string>

    <!--
        Whipped Cream topping for the order summary. It will bem shown in the format of
        "Add whipped cream? true" or "Add whipped cream? false". [CHAR LIMIT = NONE]
    -->
    <string name="order_summary_whipped_cream">Add whipped cream? </string>


    <!--
        Chocolate topping for the order summary. It will bem shown in the format of
        "Add chocolate? true" or "Add chocolate? false". [CHAR LIMIT = NONE]
     -->
    <string name="order_summary_chocolate">Add chocolate? </string>

    <!--
        Quantity of coffee cups for the order summary. It will bem shown in the format of
        "Quantity: 2", where 2 is the number of cups ordered. [CHAR LIMIT = NONE]
     -->
    <string name="order_summary_quantity">Quantity: </string>

    <!--
        Total price for the order summary. It will bem shown in the format of
        "Total: $10" where $10 is the price. [CHAR LIMIT = NONE]
     -->
    <string name="order_summary_price">Total: $ </string>

    <!-- Thank you message for the order summary [CHAR LIMIT = NONE] -->
    <string name="thank_you">Thank You!</string>

    <!--
        Subject line for the order summary e-mail. It will be shown in the format of
        "Just Java order for Amy" where Amy is the user's name. [CHAR LIMIT = NONE]
     -->
    <string name="order_summary_email_subject">Just Java order for <xliff:g id="name" example = "Amy"></xliff:g></string>

    <string name="add_whipped_cream">Yes</string>

    <string name="no_whipped_cream">No</string>

    <string name="add_chocolate">Yes</string>

    <string name="no_chocolate">No</string>

    <!-- Message displayed when the customer tries to request more than 100 coffees -->
    <string name="too_many_coffees">You cannot order more than 99 coffees!</string>

    <!-- Message displayed when the customer tries to request less than 1 coffee -->
    <string name="too_few_coffees">You cannot order less than 1 coffee!</string>


</resources>
